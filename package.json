{
  "name": "@kontist/mock-solaris",
  "version": "1.0.12",
  "description": "Mock Service for Solaris API",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": "https://github.com/kontist/mock-solaris.git",
  "author": "Kontist GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean:dist": "rm -rf dist && mkdir -p dist/src",
    "copy:assets": "cp -r src/templates dist/src",
    "build": "npm run clean:dist && npm run copy:assets && tsc",
    "build:hot": "npm run clean:dist && npm run copy:assets && tsc --watch",
    "build:docker": "docker build -f Dockerfile.dev -t mocksolaris .",
    "start": "node dist/src/server.js",
    "start:hot": "nodemon --watch dist/ --exec npm run start",
    "start:docker": "docker run -p 127.0.0.1:2091:2091 -v $(pwd)/dist:/opt/mockSolaris/dist/ mocksolaris npm run start:hot",
    "debug": "node --nolazy --inspect=0.0.0.0:9559 dist/src/server.js",
    "test": "npm run lint && npm run build && mocha --recursive 'dist/tests/**/*.spec.js'",
    "coverage": "nyc npm run test",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.15.2",
    "express-winston": "2.0.0",
    "express": "^4.14.0",
    "http-status": "^0.2.3",
    "ibankit": "^1.2.6",
    "lodash": "^4.17.15",
    "moment": "^2.17.1",
    "node-fetch": "^2.3.0",
    "node-jose": "^1.1.3",
    "node-uuid": "^1.4.7",
    "redis-mock": "^0.49.0",
    "redis": "^3.0.2",
    "swig": "^1.4.2",
    "winston-loggly-bulk": "2.0.3",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.1.1",
    "@types/node-uuid": "0.0.28",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  }
}
