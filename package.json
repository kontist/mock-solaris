{
  "name": "@kontist/mock-solaris",
  "version": "1.0.100",
  "description": "Mock Service for Solaris API",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": "https://github.com/kontist/mock-solaris.git",
  "author": "Kontist GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean:dist": "rm -rf dist && mkdir -p dist/src",
    "copy:assets": "cp -r src/templates dist/src && cp -r src/assets dist/src",
    "build": "npm run clean:dist && npm run copy:assets && tsc",
    "build:hot": "npm run clean:dist && npm run copy:assets && tsc --watch",
    "build:docker": "docker build -f DockerfileDev -t mocksolaris .",
    "start": "node dist/src/server.js",
    "start:mockredis": "docker run -p 8364:6379 redis:alpine --appendonly yes",
    "start:hot": "nodemon --watch dist/ --exec npm run start",
    "start:docker": "docker-compose up",
    "start:docker:test": "docker-compose -f docker-compose-mocha.yml up --build --exit-code-from mock-solaris",
    "debug": "node --nolazy --inspect=0.0.0.0:9559 dist/src/server.js",
    "test:docker": "npm run lint && mocha --recursive '/opt/mockSolaris/dist/tests/**/*.spec.js' --exit",
    "test": "export MOCKSOLARIS_REDIS_SERVER=redis://localhost:8364 && npm run lint && npm run build && mocha --recursive 'dist/tests/**/*.spec.js'",
    "coverage": "nyc npm run test",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "http-status": "^1.6.1",
    "ibankit": "^1.5.0",
    "lodash": "^4.17.15",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "node-fetch": "^2.3.0",
    "node-jose": "^2.1.1",
    "node-loggly-bulk": "^4.0.1",
    "node-uuid": "^1.4.7",
    "pino": "^8.12.1",
    "pino-abstract-transport": "^1.0.0",
    "pino-http": "^8.3.3",
    "redis": "^4.6.6",
    "stripe": "^13.6.0",
    "swig": "^1.4.2",
    "validate-steuerid": "1.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.15",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.2",
    "@types/node-uuid": "^0.0.29",
    "@types/stripe": "^8.0.417",
    "chai": "^4.3.7",
    "husky": "^4.2.5",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "sinon": "^15.0.1",
    "sinon-express-mock": "^2.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  }
}
